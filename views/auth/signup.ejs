<%- include('../includes/head.ejs') %>

    </head>

    <body>

        <%- include('../includes/navigation.ejs') %>

            <main>
                <link rel="stylesheet" href="../css/signup.css">

                <% if(errorMessage){ %>
                    <div class="user-message user-message--error">
                        <%= errorMessage %>
                    </div>
                    <% } %>

                        <div class="signup">
                            <h1 class="signup__title">Sign Up</h1>

                            <form class="signup__form" action="/signup" method="POST" novalidate>

                                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                                <div class="form-control">
                                    <label class="signup__label" for="email">Email:</label>
                                    <input
                                        class="signup__input <%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>"
                                        type="email" id="email" name="email" value="<%= oldInput.email %>">
                                </div>

                                <div class="form-control">
                                    <label class="signup__label" for="password">Password:</label>
                                    <input
                                        class="signup__input <%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>"
                                        type="password" id="password" name="password" value="<%= oldInput.password %>">
                                </div>

                                <div class="form-control">
                                    <label class="signup__label" for="confirmPassword">Confirm Password:</label>
                                    <input
                                        class="signup__input <%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>"
                                        type="password" id="confirmPassword" name="confirmPassword"
                                        value="<%= oldInput.confirmPassword %>">
                                </div>

                                <button class="btn btn--signup" type="submit">Sign Up</button>
                            </form>
                        </div>
            </main>

            <!-- Add other scripts or footer content as needed -->
            <%- include('../includes/end.ejs') %>
    </body>

    </html>
