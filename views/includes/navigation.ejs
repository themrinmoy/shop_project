<div class="backdrop"></div>
<header class="main-header">
    <button id="menu-toggle" class="menu-toggle menu">Menu</button>
    <nav class="main-header__nav">
        <ul class="main-header__item-list">
            <li class="main-header__item"><a class="<%= path === '/' ? 'active': '' %>" href="/">Shop</a></li>
            <li class="main-header__item"><a class="<%= path === '/products' ? 'active': '' %>" href="/products">Products</a></li>
            <% if(isAuthenticated){ %>
                <li class="main-header__item"><a class="<%= path === '/cart' ? 'active': '' %>" href="/cart">Cart</a></li>
                <li class="main-header__item"><a class="<%= path === '/orders' ? 'active': '' %>" href="/orders">Orders</a></li>
                <li><a class="<%= path === '/admin/add-product' ? 'active': '' %>" href="/admin/add-product">Add Product</a></li>
                <li><a class="<%= path === '/admin/products' ? 'active': '' %>" href="/admin/products">Admin Products</a></li>
            <% } %>
        </ul>
        <ul class="main-header__item-list login_show">
            <% if(isAuthenticated){ %>
                <li class="main-header__item login_show">
                    <form action="/logout" method="post">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <button class="logout-btn" type="submit">Logout</button>
                    </form>
                </li>
            <% } else { %>
                <li class="main-header__item ">
                    <a class="<%= path === '/login' ? 'active': '' %>" href="/login">Login</a>
                </li>
                <li class="main-header__item login_show">
                    <a class="<%= path === '/signup' ? 'active': '' %>" href="/signup">Signup</a>
                </li>
            <% } %>
        </ul>
    </nav>
</header>

<script>
    const menuToggle = document.getElementById('menu-toggle');
    const navList = document.querySelector('.main-header__nav ul');

    menuToggle.addEventListener('click', () => {
        navList.classList.toggle('show-menu');
    });
</script>
